upstream php-upstream {
    # Set the name of your php-fpm container
    server gac.php-fpm:9000;
}

server {
    listen 80 default_server;
    # Set correct domains
    server_name gac.myprod.local, api.gac.myprod.local;
    root /var/www/public;
    client_max_body_size 10M;

    location / {
         try_files $uri /index.php$is_args$args;
    }

    location ~ ^/index.php(/|$) {

        fastcgi_pass php-upstream;
        fastcgi_split_path_info ^(.+\.php)(/.*)$;
        include fastcgi_params;
        # If needed, change the ENV value
        fastcgi_param SYMFONY_ENV dev;
        fastcgi_param SYMFONY_VAR_DIR /tmp;
        # Trusted proxies
        fastcgi_param SYMFONY_TRUSTED_PROXIES '["172.21.0.0/16"]';
        fastcgi_param  SCRIPT_FILENAME  $realpath_root$fastcgi_script_name;
        fastcgi_param DOCUMENT_ROOT $realpath_root;
        fastcgi_param HTTPS off;
        fastcgi_read_timeout 240;
        client_max_body_size 10M;
    }

    location ~ \.php$ {
        return 404;
    }
}
